@model YuchisoftTest.Web.Models.ErrorPage.ErrorPageVm
@{
    ViewData["Title"] = "Error";
    var traceId = (string?)ViewBag.TraceId ?? "-";
}


<div class="container py-5">
    <h2 class="mb-3">Bir hata oluştu</h2>

    <div class="alert alert-danger">
        Bu işlemi gerçekleştirirken beklenmeyen bir hata oluştu. <br />
        <strong>TraceId:</strong> @Model.TraceId
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Logs == null || !Model.Logs.Any())
            {
                <div class="alert alert-warning">
                    No log record found for this TraceId.
                </div>
            }
            else
            {
                <table class="table table-bordered table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Message</th>
                            <th>Request</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.Logs)
                        {
                            <tr>
                                <td>@log.CreatedAt</td>
                                <td>@log.ExceptionType</td>
                                <td style="max-width:380px; white-space:normal;">@log.Message</td>
                                <td>
                                    <div><b>@log.Method</b> @log.Path</div>
                                    @if (!string.IsNullOrWhiteSpace(log.QueryString))
                                    {
                                        <div class="text-muted">@log.QueryString</div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
