@model YuchisoftTest.Web.Models.StockTypes.StockTypeSaveVm
@using static YuchisoftTest.Domain.Enums.Enums

@{
    bool isEdit = Model.Id > 0;
    string title = isEdit ? "Stok Türünü Güncelle" : "Yeni Stok Türü";
    string btnText = isEdit ? "Güncelle" : "Kaydet";
}

<h6 class="mb-3">@title</h6>

<form id="saveStockTypeForm" method="post" asp-controller="StockType" asp-action="SaveStockType">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">İsim</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Stok Sınıfı</label>
        <select class="form-select" asp-for="StockClass">
            @foreach (StockClass sc in Enum.GetValues(typeof(StockClass)))
            {
                <option value="@((int)sc)">@sc</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="StockClass"></span>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">@btnText</button>
    </div>
</form>
